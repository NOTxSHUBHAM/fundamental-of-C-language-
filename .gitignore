#include <stdio.h>

int main()
{
    printf("** Number Comparator **\n");
    printf("***********************\n");
    
    float num1, num2, num3;
    
    // Get first number with validation
    printf("Enter the first number: ");
    if (scanf("%f", &num1) != 1) {
        printf("Error: Invalid input for first number.\n");
        return 1;
    }
    
    // Get second number with validation
    printf("Enter the second number: ");
    if (scanf("%f", &num2) != 1) {
        printf("Error: Invalid input for second number.\n");
        return 1;
    }
    
    // Get third number with validation
    printf("Enter the third number: ");
    if (scanf("%f", &num3) != 1) {
        printf("Error: Invalid input for third number.\n");
        return 1;
    }
    
    // Find the largest number using clear if-else logic
    float largest = num1;
    
    if (num2 > largest) {
        largest = num2;
    }
    if (num3 > largest) {
        largest = num3;
    }
    
    // Display result with proper formatting
    if (largest == (int)largest) {
        printf("The largest number is: %d\n", (int)largest);
    } else {
        printf("The largest number is: %.2f\n", largest);
    }
    
    return 0;
}
















