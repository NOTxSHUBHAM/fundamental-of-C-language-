#include <stdio.h>

int main()
{
    const float TRAVEL_ALLOWANCE = 1600.0f;
    const float HRA_PERCENTAGE = 0.1f;
    const float DA_PERCENTAGE = 0.3f;
    
    float basic_salary = 0.0f;
    
    printf("Enter basic salary: ");
    
    // Check if input is valid
    if (scanf("%f", &basic_salary) != 1) {
        printf("Error: Invalid input. Please enter a valid number.\n");
        return 1;
    }
    
    // Validate input
    if (basic_salary < 0) {
        printf("Error: Salary cannot be negative.\n");
        return 1;
    }
    
    float HRA = HRA_PERCENTAGE * basic_salary;
    float DA = DA_PERCENTAGE * basic_salary;
    float gross_salary = basic_salary + HRA + DA + TRAVEL_ALLOWANCE;
    
    // Check if salary is integer (with small epsilon for floating point comparison)
    if (basic_salary == (int)basic_salary) {
        printf("Gross salary: %d\n", (int)gross_salary);
    } else {
        printf("Gross salary: %.2f\n", gross_salary);
    }
    
    return 0;
}






