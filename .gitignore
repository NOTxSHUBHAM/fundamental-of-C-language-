#include <stdio.h>
#include <math.h> 

int main() {
    float a, b, c; 
    float discriminant, root1, root2;

    printf("Enter the coefficients a, b, and c: \n");
    printf("a: ");
    scanf("%f", &a);
    printf("b: ");
    scanf("%f", &b);
    printf("c: ");
    scanf("%f", &c);

    discriminant = (b * b) - (4 * a * c);
    if (discriminant >= 0) {
        root1 = (-b + sqrt(discriminant)) / (2 * a);
        root2 = (-b - sqrt(discriminant)) / (2 * a);
        printf("Root 1 = %.4f\n", root1);
        printf("Root 2 = %.4f\n", root2);
    } else {
       
        printf("Roots are not real (imaginary).\n");
    }

    return 0; 
}


