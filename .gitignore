#include <stdio.h>

int main() {
    int num1, num2, choice;
    float result; // Use float for division to handle decimal results

    // 2. Read two numbers and choice of operation
    printf("Enter the first number: ");
    scanf("%d", &num1);

    printf("Enter the second number: ");
    scanf("%d", &num2);

    printf("\nChoose an operation:\n");
    printf("1. Addition (+)\n");
    printf("2. Subtraction (-)\n");
    printf("3. Multiplication (*)\n");
    printf("4. Division (/)\n");
    printf("5. Modulus (%%)\n"); // Use %% to print a literal %
    printf("Enter your choice (1-5): ");
    scanf("%d", &choice);

    // 3. Using a Switch Statement perform the following
    switch (choice) {
        case 1:
            // 4. if choice is 1, add two numbers and store the result.
            result = num1 + num2;
            printf("Result: %d + %d = %.2f\n", num1, num2, result);
            break;
        case 2:
            // 5. if choice is 2, subtract two numbers and store the result.
            result = num1 - num2;
            printf("Result: %d - %d = %.2f\n", num1, num2, result);
            break;
        case 3:
            // 6. if choice is 3, multiply two numbers and store the result.
            result = num1 * num2;
            printf("Result: %d * %d = %.2f\n", num1, num2, result);
            break;
        case 4:
            // 7. if choice is 4, divide two numbers and store the result.
            if (num2 != 0) {
                result = (float)num1 / num2; // Type-cast to float for accurate division
                printf("Result: %d / %d = %.2f\n", num1, num2, result);
            } else {
                printf("Error: Division by zero is not allowed.\n");
            }
            break;
        case 5:
            // Perform modulus operation
            if (num2 != 0) {
                result = num1 % num2;
                printf("Result: %d %% %d = %.0f\n", num1, num2, result);
            } else {
                printf("Error: Modulus by zero is not allowed.\n");
            }
            break;
        default:
            printf("Invalid choice. Please enter a number between 1 and 5.\n");
            break;
    }

    // 9. Stop
    return 0;
}
